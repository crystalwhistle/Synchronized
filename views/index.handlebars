<!doctype html>

<html>
<head>
	<title>Synchronized</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=0.5, user-scalable=0">
	<!--<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">-->
	<link href='https://fonts.googleapis.com/css?family=Julius+Sans+One' rel='stylesheet' type='text/css'>
	<link href="/css/introHCI.css" rel="stylesheet">
	<!--<meta name="viewport" content="user-scalable = yes">-->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

	{{#if showAlternate}}

	<div class="container">
		<center>

		<div>
			<img src="images/logo.png" alt="logo" class="img"><br>
			<img src="images/divider.png" alt="logo" class="img"><br>
			<img src="images/events.png" alt="logo" class="img"><br>
			<img src="images/divider.png" alt="logo" class="img"><br><br>
		</div>

		<a href="/createNewEvent"><button id="newEvent" class="btn btn-default">Create New Event</button></a> <br><br><br>
	

		{{#each projects}}
			<a href="project/{{name}}" class="thumbnail">
				<div class="project" id="{{id}}">
					<a href="project/{{name}}" class="thumbnail">
						<img src="{{image}}" class="img">
						<p>{{name}}</p>
						<p>{{date}}</p>
					</a>
				</div>
			</a>
			<br><br><br>
		{{/each}}
		</center>
	</div>

	{{else}}

	<div class="dropdown">
		<a href="/createNewEvent"><img src="images/add.png" width="85" height="85" class="img"></a>
	</div>
	<br><br>

	<div class="container">
		<center>

		<div>
			<img src="images/logo.png" alt="logo" class="img"><br>
			<img src="images/divider.png" alt="logo" class="img"><br>
			<img src="images/events.png" alt="logo" class="img"><br>
			<img src="images/divider.png" alt="logo" class="img"><br><br>
		</div>

		{{#each projects}}
			<a href="project/{{name}}" class="thumbnail">
				<div class="project" id="{{id}}">
					<a href="project/{{name}}" class="thumbnail">
						<img src="{{image}}" class="img">
						<p>{{name}}</p>
						<p>{{date}}</p>
					</a>
				</div>
			</a>
			<br><br><br>
		{{/each}}
		</center>
	</div>

	{{/if}}

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>

</html>
