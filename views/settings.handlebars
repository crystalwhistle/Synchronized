<body>

  <!-- Dropdown menu-->
  <div class="dropdown">
    <img src="../images/settings.png" width="43" height="43" class="img">
      <div class="dropdown-content">
        <a href="/index">Home</a>
        <a href="javascript:history.back()">Back</a>
      </div>
  </div>
  <br><br>


  <div class="container">
    <center>

    <div>
      <a href="/"><img src="../images/logo.png" alt="logo" class="img"></a><br>
      <img src="../images/divider.png" alt="logo" class="img"><br>
    </div>

    <h2>{{name}}<h2>
    <h2>Event Settings</h2><br>
    
    <div class="form">

    <form id="updateEventForm" role="form" method="get" action="/update">
      <div class="form-group">
        <h3><label for="name">Event name:</label></h3>
        <input type="text" class="form-control" id="eventName" style="width:300px" placeholder="{{name}}" name="name" required>
      </div>
      <div class="form-group">
        <h3><label for="date">Event Date:</label></h3>
        <input type="date" class="form-control" id="datepicker" style="width:300px" name="date" required>
      </div>
      <div>
        <h3><label for="image">Event Picture (link):</label></h3>
        <!--<input type="file" name="pic" accept="image/*">-->
        <input type="text" class="form-control" id="image" style="width:300px" placeholder="{{image}}" name="image" required>
      </div>
      <br><br>

      <a href="../project/{{name}}"><input type="submit" id="updateBtn" class="btn btn-default" value="Update"></input><br><br>
    </form>

    <a href="../project/{{name}}"><button id="cancelBtn" class="btn btn-default">Cancel/Done</button></a><br><br>
    <a href="/index"><button id="deleteEvent" class="btn btn-default">Delete Event</button></a>
    
    </div>

    
    </center>
  </div>

  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/introHCI.js"></script> 
</body>

</html>
